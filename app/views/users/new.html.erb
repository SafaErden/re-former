<%= form_for @user do |f| %>

<ul>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>


  Username:
  <%= f.text_field :username, placeholder:"Your name here."%>
  Email:
  <%= f.email_field :email, placeholder:"example@example.com" %>
  Password:
  <%= f.password_field :password %>
  <%= f.submit "Create" %>
<% end %>
